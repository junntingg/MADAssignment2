<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckInOutList">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/bottomborder"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:shadowColor="#433E3E"
            android:text="CHECK-IN/OUT"
            android:textColor="#367386"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="320dp"
            android:layout_height="91dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="550dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/smallercheckin"
            android:drawableRight="@drawable/ic_baseline_arrow_right_alt_24"
            android:gravity="center"
            android:text="ROOM"
            android:textColor="#090909" />

        <Button
            android:id="@+id/button2"
            android:layout_width="320dp"
            android:layout_height="91dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="429dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/smallercheckout"
            android:drawableRight="@drawable/ic_baseline_arrow_right_alt_24"
            android:gravity="center"
            android:text="SERVICE"
            android:textColor="#090909" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>